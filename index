    <script>
        let dayCounter = 1;

        // Get dates from inputs
        function getStartDate() {
            const input = document.getElementById('startDate').value;
            return input ? new Date(input) : null;
        }

        function getTestDate() {
            const input = document.getElementById('testDate').value;
            return input ? new Date(input) : null;
        }

        // Get study parameters
        function getStudyParams() {
            return {
                numTests: parseInt(document.getElementById('numTests').value) || 0,
                hoursPerTest: parseFloat(document.getElementById('hoursPerTest').value) || 0,
                totalQuestions: parseInt(document.getElementById('totalQuestions').value) || 0,
                questionsPerSet: parseInt(document.getElementById('questionsPerSet').value) || 1,
                hoursPerSet: parseFloat(document.getElementById('hoursPerSet').value) || 0
            };
        }

        function calculateTotalHours() {
            const params = getStudyParams();
            const testHours = params.numTests * params.hoursPerTest;
            const numSets = Math.ceil(params.totalQuestions / params.questionsPerSet);
            const questionHours = numSets * params.hoursPerSet;
            return testHours + questionHours;
        }

        // Update requirements display
        function updateRequirements() {
            const params = getStudyParams();
            const testHours = params.numTests * params.hoursPerTest;
            const numSets = Math.ceil(params.totalQuestions / params.questionsPerSet);
            const questionHours = numSets * params.hoursPerSet;
            const totalHours = testHours + questionHours;

            document.getElementById('testHours').textContent = 
                `${params.numTests} tests √ó ${params.hoursPerTest} hours = ${testHours.toFixed(1)} hours`;
            
            document.getElementById('questionSets').textContent = 
                `${params.totalQuestions.toLocaleString()} questions √∑ ${params.questionsPerSet} = ${numSets} sets`;
            
            document.getElementById('questionHours').textContent = 
                `${numSets} sets √ó ${params.hoursPerSet} hours = ${questionHours.toFixed(1)} hours`;
            
            document.getElementById('totalHours').textContent = 
                `${totalHours.toFixed(1)} hours needed`;
        }

        // Save data to localStorage
        function saveData() {
            const data = {
                startDate: document.getElementById('startDate').value,
                testDate: document.getElementById('testDate').value,
                numTests: document.getElementById('numTests').value,
                hoursPerTest: document.getElementById('hoursPerTest').value,
                totalQuestions: document.getElementById('totalQuestions').value,
                questionsPerSet: document.getElementById('questionsPerSet').value,
                hoursPerSet: document.getElementById('hoursPerSet').value,
                defaultStudyHours: document.getElementById('defaultStudyHours').value,
                dayCounter: dayCounter
            };

            const rows = document.querySelectorAll('.day-input-row');
            const dayAdjustments = [];
            
            rows.forEach(row => {
                const date = row.querySelector('.day-date').value;
                const hours = row.querySelector('.day-hours').value;
                if (date && hours) {
                    dayAdjustments.push({ date, hours });
                }
            });

            data.dayAdjustments = dayAdjustments;
            localStorage.setItem('mcatScheduleData', JSON.stringify(data));
            
            showSaveNote();
        }

        function showSaveNote() {
            const note = document.getElementById('saveNote');
            note.style.display = 'block';
            setTimeout(() => {
                note.style.display = 'none';
            }, 2000);
        }

        // Load data from localStorage
        function loadData() {
            const savedData = localStorage.getItem('mcatScheduleData');
            
            if (savedData) {
                const data = JSON.parse(savedData);
                
                // Load dates
                if (data.startDate) document.getElementById('startDate').value = data.startDate;
                if (data.testDate) document.getElementById('testDate').value = data.testDate;
                
                // Load study parameters
                if (data.numTests) document.getElementById('numTests').value = data.numTests;
                if (data.hoursPerTest) document.getElementById('hoursPerTest').value = data.hoursPerTest;
                if (data.totalQuestions) document.getElementById('totalQuestions').value = data.totalQuestions;
                if (data.questionsPerSet) document.getElementById('questionsPerSet').value = data.questionsPerSet;
                if (data.hoursPerSet) document.getElementById('hoursPerSet').value = data.hoursPerSet;
                if (data.defaultStudyHours) document.getElementById('defaultStudyHours').value = data.defaultStudyHours;
                
                // Load day counter
                if (data.dayCounter) dayCounter = data.dayCounter;
                
                // Load day adjustments
                if (data.dayAdjustments && data.dayAdjustments.length > 0) {
                    data.dayAdjustments.forEach(adj => {
                        addDayInput(adj.date, adj.hours);
                    });
                }
            } else {
                // Set default dates if no saved data
                const tomorrow = new Date();
                tomorrow.setDate(tomorrow.getDate() + 1);
                const testDate = new Date('2026-01-15');
                
                document.getElementById('startDate').value = tomorrow.toISOString().split('T')[0];
                document.getElementById('testDate').value = testDate.toISOString().split('T')[0];
            }
            
            updateRequirements();
            updateDaysRemaining();
        }

        function clearAllData() {
            if (confirm('Are you sure you want to clear all your saved data?')) {
                localStorage.removeItem('mcatScheduleData');
                location.reload();
            }
        }

        function updateDaysRemaining() {
            const startDate = getStartDate();
            const testDate = getTestDate();
            
            if (!testDate) {
                document.getElementById('testDateDisplay').textContent = 'Target Test Date: Not set';
                document.getElementById('daysRemaining').textContent = 'Set your dates above';
                return;
            }
            
            document.getElementById('testDateDisplay').textContent = 
                `Target Test Date: ${testDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}`;
            
            const today = new Date();
            const diffTime = testDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            
            if (diffDays < 0) {
                document.getElementById('daysRemaining').textContent = 'Test date has passed';
            } else {
                document.getElementById('daysRemaining').textContent = `${diffDays} days remaining`;
            }
        }

        function addDayInput(savedDate = '', savedHours = '') {
            const container = document.getElementById('dailyLogContainer');
            const row = document.createElement('div');
            row.className = 'day-input-row';
            
            const startDate = getStartDate();
            const testDate = getTestDate();
            const minDate = startDate ? startDate.toISOString().split('T')[0] : '';
            const maxDate = testDate ? testDate.toISOString().split('T')[0] : '';
            
            row.innerHTML = `
                <div class="day-label">Day ${dayCounter}</div>
                <input type="date" class="day-date" min="${minDate}" max="${maxDate}" value="${savedDate}" onchange="saveData()" required>
                <input type="number" class="day-hours" min="0" max="24" step="0.5" value="${savedHours}" placeholder="Hours studied" onchange="saveData()" required>
                <button class="btn btn-remove" onclick="removeDay(this)">Remove</button>
            `;
            container.appendChild(row);
            dayCounter++;
            if (!savedDate) saveData();
        }

        function removeDay(button) {
            button.parentElement.remove();
            saveData();
        }

        function calculateSchedule() {
            const startDate = getStartDate();
            const testDate = getTestDate();
            
            if (!startDate || !testDate) {
                alert('Please set both start date and test date before calculating.');
                return;
            }
            
            if (startDate >= testDate) {
                alert('Start date must be before test date.');
                return;
            }
            
            const TOTAL_STUDY_HOURS = calculateTotalHours();
            const params = getStudyParams();
            const defaultHours = parseFloat(document.getElementById('defaultStudyHours').value) || 0;
            
            // Collect all day adjustments
            const dayAdjustments = [];
            const rows = document.querySelectorAll('.day-input-row');
            rows.forEach(row => {
                const date = row.querySelector('.day-date').value;
                const hours = parseFloat(row.querySelector('.day-hours').value);
                if (date && !isNaN(hours)) {
                    dayAdjustments.push({ date: new Date(date), hours: hours });
                }
            });

            // Sort adjustments by date
            dayAdjustments.sort((a, b) => a.date - b.date);

            // Calculate total available study hours
            let currentDate = new Date(startDate);
            let totalAvailableHours = 0;
            const dailySchedule = [];

            while (currentDate <= testDate) {
                const dateStr = currentDate.toISOString().split('T')[0];
                const adjustment = dayAdjustments.find(adj => adj.date.toISOString().split('T')[0] === dateStr);
                const hoursForDay = adjustment ? adjustment.hours : defaultHours;
                
                totalAvailableHours += hoursForDay;
                dailySchedule.push({
                    date: new Date(currentDate),
                    hours: hoursForDay,
                    cumulativeHours: totalAvailableHours
                });

                currentDate.setDate(currentDate.getDate() + 1);
            }

            // Find completion date
            let completionDate = null;
            let hoursAccumulated = 0;
            let daysToComplete = 0;

            for (let day of dailySchedule) {
                hoursAccumulated += day.hours;
                daysToComplete++;
                if (hoursAccumulated >= TOTAL_STUDY_HOURS) {
                    completionDate = day.date;
                    break;
                }
            }

            // Calculate statistics
            const totalDays = Math.ceil((testDate - startDate) / (1000 * 60 * 60 * 24));
            const avgHoursNeeded = TOTAL_STUDY_HOURS / totalDays;

            // Display results
            document.getElementById('results').classList.remove('hidden');
            document.getElementById('totalDays').textContent = totalDays;
            document.getElementById('totalHours').textContent = totalAvailableHours.toFixed(1) + 'h';
            document.getElementById('hoursPerDay').textContent = (totalAvailableHours / totalDays).toFixed(1) + 'h';
            
            if (completionDate) {
                document.getElementById('completionDate').textContent = completionDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
            } else {
                document.getElementById('completionDate').textContent = 'Not possible';
            }

            // Timeline details
            const numSets = Math.ceil(params.totalQuestions / params.questionsPerSet);
            const testHours = params.numTests * params.hoursPerTest;
            const questionHours = numSets * params.hoursPerSet;
            
            const timelineDetails = document.getElementById('timelineDetails');
            timelineDetails.innerHTML = `
                <p><strong>Study Requirements:</strong></p>
                <p>‚Ä¢ ${params.numTests} practice tests (${testHours.toFixed(1)} hours)</p>
                <p>‚Ä¢ ${numSets} question sets (${questionHours.toFixed(1)} hours)</p>
                <p>‚Ä¢ <strong>Total: ${TOTAL_STUDY_HOURS.toFixed(1)} hours needed</strong></p>
                <br>
                <p><strong>Your Schedule:</strong></p>
                <p>‚Ä¢ Available hours: ${totalAvailableHours.toFixed(1)} hours</p>
                <p>‚Ä¢ Average per day: ${(totalAvailableHours / totalDays).toFixed(1)} hours</p>
                <p>‚Ä¢ Days with adjustments: ${dayAdjustments.length}</p>
            `;

            // Status message
            const statusDiv = document.getElementById('statusMessage');
            if (!completionDate) {
                statusDiv.className = 'status-message status-danger';
                statusDiv.innerHTML = `‚ö†Ô∏è <strong>Not Enough Time!</strong><br>You need ${TOTAL_STUDY_HOURS.toFixed(1)} hours but only have ${totalAvailableHours.toFixed(1)} hours scheduled.<br>Increase your daily study hours by ${((TOTAL_STUDY_HOURS - totalAvailableHours) / totalDays).toFixed(1)} hours per day.`;
            } else if (completionDate > testDate) {
                statusDiv.className = 'status-message status-danger';
                statusDiv.innerHTML = `‚ö†Ô∏è <strong>You'll finish after the deadline!</strong><br>Completion date: ${completionDate.toLocaleDateString()}<br>You need to increase your daily study hours.`;
            } else if (completionDate.toDateString() === testDate.toDateString()) {
                statusDiv.className = 'status-message status-warning';
                statusDiv.innerHTML = `‚ö° <strong>Cutting it close!</strong><br>You'll finish exactly on the deadline. Consider adding buffer time.`;
            } else {
                const daysEarly = Math.ceil((testDate - completionDate) / (1000 * 60 * 60 * 24));
                statusDiv.className = 'status-message status-success';
                statusDiv.innerHTML = `‚úÖ <strong>You're on track!</strong><br>You'll complete ${daysEarly} days before the test with time to spare for review.`;
            }
        }

        // Initialize on page load
        window.addEventListener('load', () => {
            loadData();
            setInterval(updateDaysRemaining, 60000); // Update every minute
        });
    </script>
</body>
</html>
